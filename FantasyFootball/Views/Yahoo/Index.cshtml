@model List<FantasyFootball.Models.League>
@{
	ViewBag.Title = "Choose Yahoo! League";
}

<div data-role="page">
	<div data-role="header">
		<h1>@ViewBag.Title</h1>
	</div>
	<div data-role="content">
		<ul data-role="listview" data-inset="true">
			@{if (Model != null)
				{
					foreach (FantasyFootball.Models.League League in Model)
					{
						<li>
							<a href="@Url.Action("Team", "Yahoo", new RouteValueDictionary(new { leagueId = League.LeagueId, teamId = League.TeamId }))" data-ajax="false">
								<h2>@League.TeamName</h2>
								<p>@League.LeagueName</p>
							</a>
						</li>
					}
				}
			}
		</ul>
	</div>
</div>
